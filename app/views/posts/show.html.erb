<p id="notice"><%= notice %></p>

<p>
  <strong>Link:</strong>
  <%= link_to @post.url, @post.url, :target => "_blank" %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Tags:</strong>
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
